@model Integrador_Reserva.Models.UsuarioViewModel
@{
    var grid = new WebGrid();
    grid.Bind(Model.listaUsuarios);
}

<div id="content-inventario-grid">
    @grid.GetHtml(
        headerStyle: "", rowStyle: "", alternatingRowStyle: "", footerStyle: "",
        htmlAttributes: new { id = "IDGRID", @class = "table table - striped table - bordered table - condensed" },
        mode: WebGridPagerModes.All,
        firstText: "<< Primera",
        previousText: "< Anterior",
        nextText: "Siguiente >",
        lastText: "Última >>",
        columns: grid.Columns(
            grid.Column("usuario_id", "id", canSort: true, style: "person"),
            grid.Column("usuario_nombre", "nombre", canSort: true, style: "person"),
            grid.Column("usuario_presentacion", "presentacion", canSort: true, style: "person"),
            grid.Column("usuario_razonsocial", "razon social", canSort: true, style: "person"),
            grid.Column("usuario_ruc", "ruc", canSort: true, style: "person"),
            grid.Column("usuario_email", "email", canSort: true, style: "person"),
            grid.Column("usuario_telefono", "telefono", canSort: true, style: "person"),
            grid.Column(header: "Acciones", format: (item) => new HtmlString(
                                        Html.ActionLink("Ver canchas", "Edit", new {
                                            usuario_id = item.usuario_id,
                                            usuario_nombre = item.usuario_nombre,
                                            usuario_razonsocial = item.usuario_razonsocial
                                        }) + " | " +
                        Html.ActionLink("Eliminar", "Delete", new { id = item.usuario_id }).ToString() + " | "
                    )
            )
    ))
</div>
